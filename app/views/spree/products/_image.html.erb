<% if defined?(image) && image %>
  <%= image_tag image.attachment.url(:product), :itemprop => "image" %>
<% else %>



<% @product.images.each do |i| %>
<% if i.position == 1 %>

<img id="zoom_<%= i.position %>" src= "<%= i.attachment.url(:product) %>" data-zoom-image= <%= i.attachment.url(:large) %> />

<script>
    $('#zoom_<%= i.position %>').elevateZoom(); 
 
</script>

<% end %>
<% end %>
<% end %>
